@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<div id="main" class="templatemo-content col-1 light-gray-bg">

    <div style="margin:100px;padding-top:80px">


        @model WebApplication3.Models.Helper.OrderSummaryIndexListingModel

        <div id="clients">
            <h3>Podsumowanie</h3>

            <div style="font-size:15px;width:49%;height:120px;float:left;border:1px solid black;">
                <div>@Model.ClientNumber</div>
                <div>@Model.Name</div>
                <div>@Model.Surname</div>
                <div>@Model.email</div>
                <div>@Model.PhoneNumer</div>
            </div>
            <div style="font-size:15px;width:49%;height:120px;float:left;border:1px solid black;">
                <div>@Model.Street</div>
                <div>@Model.StreetNumber</div>
                <div>@Model.AppartmentNumber</div>
                <div>@Model.City</div>
                <div>@Model.Country</div>
            </div>

            <div style="font-size:15px;width:99%;height:30px;float:left;"></div>

            <div id="clientsTable">
                <table class="table table-condensed" id="catalogIndexTable">
                    <thead>
                        <tr>
                            <td>Nazwa</td>
                            <td>Wartość</td>
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var product in Model.Products)
                        {
                            <tr class="clientRow">
                                <td class="">@product.Name</td>
                                <td class="">@product.Price</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            @if (ViewBag.ActionId == 1)
            {
                <div>
                    <a asp-action="Pay" asp-route-OrderId="@Model.OrderId">Potwierdź i zapłać</a>
                </div>
            }
            else if (ViewBag.ActionId == 2)
            {
                <div>
                    <a asp-controller="PackingNote" asp-action="PackingNoteDetails" asp-route-PackingNoteId="@ViewBag.TempId">Powrót</a>
                </div>
            }
            else if (ViewBag.ActionId == 3)
            {
                <div>
                    <a asp-controller="Invoice" asp-action="ShowInvoice" asp-route-OrderId="@Model.OrderId">Faktura</a>
                </div>
            }
            else if (ViewBag.ActionId == 4)
            {
                <div>
                    <a asp-controller="Order" asp-action="GetAll" asp-route-OrderId="@Model.OrderId">Powrót</a>
                </div>
                <div>
                    <a asp-controller="Invoice" asp-action="ShowInvoice" asp-route-OrderId="@Model.OrderId">Faktura</a>
                </div>
            }
            else
            {
                <div>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </div>
            }

        </div>
    </div>

    <div class="templatemo-content-container">

        <footer class="text-right">
            <p>
                Copyright &copy; 2084 Company Name
                | Design: Template Mo
            </p>
        </footer>
    </div>
</div>
