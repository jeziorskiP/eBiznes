


@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<div id="main" class="templatemo-content col-1 light-gray-bg">
    <div style="margin:100px;padding-top:80px">

        @model WebApplication3.Models.Complaint.ComplaintIndexListingModel


        @{
            ViewData["Title"] = "ResolveComplaint";
        }

        <h2>Rozwiązywanie reklamacji</h2>

        <div class="row">
            <form asp-action="ResolveComplaint">
                <div style="font-size:15px;width:99%;height:30px;float:left;"></div>
                <div class="form-group" style="font-size:15px;width:70%;height:80%;float:left;">
                    <label asp-for="OrderNumber" class="control-label">Numer Zamówienia</label>
                    <input asp-for="OrderNumber" class="form-control" disabled="disabled" />
                </div>
                <div style="font-size:15px;width:99%;height:30px;float:left;"></div>
                <div class="form-group" style="font-size:15px;width:70%;height:80%;float:left;">
                    <label asp-for="CreateDate" class="control-label">Data utworzenia</label>
                    <input asp-for="CreateDate" class="form-control" disabled="disabled" />
                </div>

                <div style="font-size:15px;width:99%;height:30px;float:left;"></div>
                <div class="form-group" style="font-size:15px;width:70%;height:80%;float:left;">
                    <label asp-for="Description" class="control-label">Opis</label>
                    <input asp-for="Description" class="form-control" disabled="disabled" />
                </div>

                <div style="font-size:15px;width:99%;height:30px;float:left;"></div>
                <div class="form-group" style="font-size:15px;width:70%;height:80%;float:left;">
                    <label asp-for="Status" class="control-label">Status</label>
                    <input asp-for="Status" class="form-control" />
                </div>
                <div class="form-group" style="font-size:15px;width:70%;height:80%;float:left;">
                    <label asp-for="Resolution" class="control-label">Rozwiązanie</label>
                    <input asp-for="Resolution" class="form-control" />
                </div>


                <div style="font-size:15px;width:99%;height:30px;float:left;"></div>
                <div style="font-size:15px;width:99%;height:30px;float:left;"></div>
                <div style="font-size:15px;width:99%;height:30px;float:left;">
                    <td>
                        <button asp-action="ResolveComplaint" asp-route-ComplaintId="@ViewBag.ComplaintId">Zastosuj</button>
                    </td>

                </div>
                <div style="font-size:15px;width:99%;height:30px;float:left;">
                    <a asp-controller="Complaint" asp-action="GetAll">
                        Powrót
                    </a>
                </div>



            </form>



        </div>
    </div>
</div>

 