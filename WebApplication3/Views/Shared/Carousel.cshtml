<div class="row carousel-holder">
    <div class="col-md-12">
        <div id="carousel-ex-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <il data-target="#carousel-ex-generic" data-slide-to="0" class="active"></il>
                <il data-target="#carousel-ex-generic" data-slide-to="2"></il>

            </ol>
            <div class="carousel-inner" style="height:300px;width = 100%">
                <div class="item active">
                    <img class="d-block w-100" src="~/images/carousel1.jpg" alt="First slide" height="50">
                </div>
  
                <div class="item">
                    <img class="d-block w-100" src="~/images/carousel3.jpg" alt="Third slide">

                </div>
            </div>
            <a class="left carousel-control" href="#carousel-ex-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-ex-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>


</div>


