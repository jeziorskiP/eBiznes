@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<div id="main" class="templatemo-content col-1 light-gray-bg">

    <div>
        @model WebApplication3.Models.Cart.ShoppingCartViewModel


        <div id="clients" style="padding:20px">
            <h3>Koszyk</h3>
            <div id="clientsTable" style="padding: 20px">
                <table class="table table-condensed" id="catalogIndexTable">
                    <thead>
                        <tr>
                            <td>Wybrane</td>
                            <td>Ilość</td>
                            <td>Notatka</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.ShoppingCart.shoppingCartItems)
                        {
                            <tr class="clientRow">
                                <td class="">@p.product.Name</td>
                                <td class="">@p.Amount</td>
                                <td class="">@p.Note</td>
                                <td class="">
                                    <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-ProductId="@p.product.Id">
                                        Usuń
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfool>
                        <tr>
                            <td>
                                Razem:
                            </td>
                            <td>@Model.ShoppingCartTotal</td>
                        </tr>
                    </tfool>
                </table>

            </div>

        </div>
        <div>
            <div style="font-size:15px;width:20px;height:30px;float:left;">
            </div>
            <div style="font-size:15px;width:40%;height:30px;float:left;">
                <a asp-controller="Product" asp-action="GetAll">Powrót do produktów</a>
            </div>
            <div style="font-size:15px;width:35%;height:30px;float:left;">
                <a asp-controller="Cart" asp-action="ClearCart">Wyczyść</a>
            </div>
            <div style="font-size:15px;width:20%;height:30px;float:left;">
                <a asp-controller="Order" asp-action="CreateOrder" asp-route-CartId="@Model.ShoppingCart.ShoppingCartId">Złóż zamówienie</a>
            </div>


        </div>

        <div style="font-size:15px;width:100%;height:500px;float:left;"> </div>
    </div>
</div>