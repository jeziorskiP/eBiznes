



@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<div id="main" class="templatemo-content col-1 light-gray-bg">


    @model WebApplication3.Models.Auto.Role
    @{
        ViewData["Title"] = "Login";
    }


    <div style="margin:100px;padding-top:80px">
        <h2>Tworzenie roli</h2>
        <div>
            <form asp-action="CreateRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Potwierdź" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>










