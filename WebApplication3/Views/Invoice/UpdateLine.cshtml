
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<div id="main" class="templatemo-content col-1 light-gray-bg">



    @model WebApplication3.Models.Invoice.InvoiceLineIndexListingModel

    <div style="margin:100px;padding-top:80px">
        <form asp-action="UpdateLine">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @Html.RadioButton("InvoiceLineId", Model.InvoiceLineId, true)
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Ilość</label>
                <input asp-for="Amount" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label">Razem</label>
                <input asp-for="TotalPrice" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Potwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
